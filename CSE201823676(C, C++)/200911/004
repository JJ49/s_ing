#include <stdio.h>

int main(void) {
  float a, b, c, sum, avg;
  
  printf("첫 번째 실수를 입력하세요 : ");
  scanf("%f", &a);
  printf("두 번째 실수를 입력하세요 : ");
  scanf("%f", &b);
  printf("세 번째 실수를 입력하세요 : ");
  scanf("%f", &c);
  
  sum = a + b + c;
  avg = sum / 3;
  
  printf("합계 : %f, 평균 : %f\n", sum, avg);
  
  return 0;
  
}
